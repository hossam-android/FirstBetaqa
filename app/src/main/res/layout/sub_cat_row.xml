<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layoutDirection="ltr"
    android:id="@+id/relative"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/subCatImage"
        android:scaleType="fitXY"
        />


    <com.hashtag.firstbetaqa.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subCatImage"
        android:text="dasdsadsa"
        android:textColor="#000000"
        android:gravity="right"
        android:id="@+id/subCatName"
        android:layout_toRightOf="@+id/lin"
        android:paddingRight="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_red"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/subCatName"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:id="@+id/lin"
        android:layout_marginLeft="10dp"
        >


        <com.hashtag.firstbetaqa.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/centerNum"
            android:textColor="#ffffff"/>


        <com.hashtag.firstbetaqa.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/center"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>


    </LinearLayout>

</RelativeLayout>