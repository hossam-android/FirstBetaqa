<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:layout_margin="10dp"
    android:id="@+id/lin"
    android:layoutDirection="ltr"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
   >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/linear"
        android:id="@+id/newsImage"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:minWidth="50dp"
        android:background="@drawable/round_orange">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"

            android:layout_gravity="center"
            android:src="@drawable/views"/>

        <com.hashtag.firstbetaqa.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="445"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:id="@+id/newsViews"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E98C2D"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/comments"/>

        <com.hashtag.firstbetaqa.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="445"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/newsComments"
            />

    </LinearLayout>

</RelativeLayout>

    <com.hashtag.firstbetaqa.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شسيشسيشس"
        android:gravity="right"
        android:textSize="10sp"
        android:layout_marginRight="5dp"
        android:id="@+id/newsDate"/>

    <com.hashtag.firstbetaqa.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        android:gravity="right"
        android:textColor="#000000"
        android:id="@+id/newsDetails"
        android:layout_marginRight="5dp"/>

</LinearLayout>